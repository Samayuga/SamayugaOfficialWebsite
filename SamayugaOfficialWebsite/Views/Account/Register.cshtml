@using OfficialSite.Models

@model RegisterViewModel

@{
    ViewBag.Title = "Register";
}

<div class="ui  container">
    <div class="ui basic segment">
        <div class="ui  grid">

            <div class="four wide column"></div>
            <div class="eight wide column" style="z-index:1;">
                <div class="ui   piled  segment">
                    <div class="ui tall stacked  raised form segment">
                        <div class="ui    blue   ribbon  label"> Create a new account.</div>

                        @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "", role = "form" }))
                        {
                            @Html.AntiForgeryToken()

                            <br />
                            <div class="">
                                @Html.LabelFor(m => m.Email, new { @class = "" })
                                <div class="col-md-10">
                                    @Html.TextBoxFor(m => m.Email, new { @class = "" })
                                </div>
                            </div>
                            <div class="">
                                @Html.LabelFor(m => m.Password, new { @class = "" })
                                <div class="col-md-10">
                                    @Html.PasswordFor(m => m.Password, new { @class = "" })
                                </div>
                            </div>
                            <div class="">
                                @Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-md-2 control-label" })
                                <div class="">
                                    @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
                                </div>
                            </div>
                            @Html.ValidationSummary("", new { @class = "ui  red sub disabled header" })
                            <br />
                            <i class="road massive  blue icon left floated"> </i> <small>we are one step ahed</small>
                            <input type="submit" class="ui blue  right floated submit button" value="Register" />
                            
                            <br />
                            <br />                           

                        }

                        <div class="ui inverted section divider"></div>

                        <div class="ui blue basic  mini animated fade button left floated">
                            <div class="visible content">
                                <i class=" icons">
                                    <i class="black user icon"></i>
                                    <i class="corner black checkmark icon"></i>
                                </i>
                               Already Registerd ?
                                                                                    
                            </div>
                            <div class="hidden content">
                                 @Html.ActionLink("Sign in ", "Login")
                                
                            </div>
                        </div>
                        <br />
                        <br />



                    </div>
                </div>
            </div>
            <div class="four wide column"></div>
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

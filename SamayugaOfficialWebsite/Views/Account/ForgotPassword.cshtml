@model OfficialSite.Models.ForgotPasswordViewModel
@{
    ViewBag.Title = "Forgot your password?";
}

<div class="ui  container">

    <div class="ui basic segment">
        <div class="ui  grid">

            <div class="four wide column"></div>
            <div class="eight wide column" style="z-index:1;">
                <div class="ui   piled  segment">
                    <div class="ui tall stacked   form segment">
                        <div class="ui top teal  attached label"> Forgot your password ?</div>

                        <div class="ui info message">
                            <i class="close icon"></i>
                            Enter your email address to recover your password from a link.
                        </div>

                        @using (Html.BeginForm("ForgotPassword", "Account", FormMethod.Post, new { @class = "", role = "form" }))
                        {
                            @Html.AntiForgeryToken()

                            <br />
                            <div class="">
                                @Html.LabelFor(m => m.Email, new { @class = "" })
                                <div class="">
                                    @Html.TextBoxFor(m => m.Email, new { @class = "" })
                                </div>
                            </div>

                            @Html.ValidationSummary("", new { @class = "ui  red sub disabled header" })
                            <br />
                            <br />
                            <input type="submit" class="ui green right floated submit button" value="Recover" />
                            <br />
                            <br />
                        }
                    </div>
                </div>

            </div>
            <div class="four wide column"></div>
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
